{
  "connectionString": {
    "Filename": "./data/GihanSoft/OtakuLib/data.litedb",
    "Connection": "Shared",
    "Upgrade": true
  },

  "Serilog": {
    "WriteTo": [
      {
        "Name": "Async",
        "Using": [ "Serilog.Exceptions" ],
        "Enrich": [ "WithExceptionDetails" ],
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "Path": "./data/GihanSoft/OtakuLib/logs/log-.log",
                "RollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  }
}